FROM python:3.9

WORKDIR /app

# 
COPY ./requirements.txt /app/requirements.txt

COPY /etc/letsencrypt/live/face-predict-back.o-r.kr/private.pem /app/private.pem
COPY /etc/letsencrypt/live/face-predict-back.o-r.kr/cert.pem /app/cert.pem
# 
RUN pip install --no-cache-dir --upgrade -r /app/requirements.txt

# 
COPY . /app

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080", "--ssl-keyfile","/app/private.pem","--ssl-certfile","/app/cert.pem"]